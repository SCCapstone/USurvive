<Window x:Class="USurvive.UserSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USurvive"
        mc:Ignorable="d"
        Title="UserSelection" Height="200" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Message Text-->
        <TextBlock x:Name="SelectFile" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center" >Select User File</TextBlock>

        <!--Buttons-->
        <Button Grid.Column="0" Grid.Row="1" Style="{StaticResource buttonStyle}" Margin="0,18,10,0">Close</Button>
        <Button Grid.Column="4" Grid.Row="1" Style="{StaticResource buttonStyle}" Margin="0,18,10,0">Open File</Button>
        </Grid>
</Window>
