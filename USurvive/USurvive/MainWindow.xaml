<Window x:Class="USurvive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USurvive"
        mc:Ignorable="d"
        Closing="DataWindow_Closing"
        Title="USurvive" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Click="DebugClick" Style="{StaticResource buttonStyle}" Height="auto">Open Debug Panel</Button>

        <Button x:Name="Classes" Style="{StaticResource buttonStyle}" Content="Classes" Click="Classes_Click" Margin="0,10,629,175" />
        <Button x:Name="Assignments" Style="{StaticResource buttonStyle}" Content="Assignments" Click="Assignments_Click" Margin="0,10,471,175" />
        <Button x:Name="Gradebook" Style="{StaticResource buttonStyle}" Content="Gradebook" Click="Gradebook_Click" Margin="0,10,312,175" />
        
        <Frame x:Name="NavigationFrame" NavigationUIVisibility="Hidden" Margin="0,40,125,0" Grid.RowSpan="2"/>
        
    </Grid>
</Window>
