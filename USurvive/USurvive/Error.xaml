<Window x:Class="USurvive.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USurvive"
        mc:Ignorable="d"
        Title="Error" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <!-- TODO: Error symbol, play sound when box appears-->
        <TextBlock x:Name="tb_ErrorText" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" ></TextBlock>

        <Button Grid.Column="1" Style="{StaticResource buttonStyle}" Name ="Close" Click="Close_Click" VerticalAlignment="Top" HorizontalAlignment="Center" Width="75" Margin="114.4,96,154.6,0" Grid.RowSpan="2">OK</Button>

    </Grid>
</Window>
