<Window x:Class="USurvive.CreateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USurvive"
        mc:Ignorable="d"
        Title="CreateUser" Height="250" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition>
            </RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" Name="NewName" Text="Enter New Username" FontSize="18" FontWeight="Bold" Margin="0,50,0,0"/>
        <TextBox x:Name="enterField" GotFocus="enterField_GotFocus" Grid.Row="1" Grid.Column="1" Text="Enter name here" Height ="Auto" Width="200" VerticalAlignment="Center" MaxLength="28"/>
        <Button x:Name="OK" VerticalAlignment="Center" Height ="Auto" Width="75" Click="OK_Click" Margin="0,110,0,0">OK</Button>
    </Grid>
</Window>
